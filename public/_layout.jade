doctype
html(lang='ja')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible',content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title= pagename
      | &nbsp;|&nbsp;
      =sitetitle
    link(rel='stylesheet' href='/assets/css/style.css')
    |<!--[if lt IE 9]>
    |  <script src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js'></script>
    |  <script src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js'></script>
    |<![endif]-->
  body
    header.l-header
      .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        .container
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/index.html')= sitetitle
          .collapse.navbar-collapse
            ul.nav.navbar-nav
              for article, slug in public._data
                li
                  a(href='/#{ slug }.html')= article.pagename
              li
                a(href='/cssFoundation/index.html') css/Foundation
              li
                a(href='/cssLayout/index.html') css/Layout
              li
                a(href='/cssObject/index.html') css/Object
    main.l-main
      .container
        h1= pagename
        p= description
        != yield
    script(src='/assets/js/jquery.min.js')
    script(src='/assets/js/bootstrap.min.js')
    script(src='/assets/js/custom.js')
